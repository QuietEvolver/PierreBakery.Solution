@{
  Layout = "_Layout";
}

@using PierreBakery.Models;
@model List<PierreBakery.Models.Employee>;

<h1>Categories</h1>

@if (@Model.Count == 0)
{
  <h3>No employees have been added yet!</h3>
}

@foreach (Employee employee in Model)
{
  <li>@Html.ActionLink($"{employee.Name}", "Details", new { id = employee.EmployeeId })</li>
}

<p>@Html.ActionLink("Add new employee", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>
