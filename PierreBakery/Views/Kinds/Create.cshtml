@{
  Layout = "_Layout";
}

@model PierreBakery.Models.Kind

<h4>Add a new kind for the bakery shoppe</h4>

@using (Html.BeginForm())
{

    @Html.HiddenFor(model => model.KindId)

    @Html.Label("Select flavor")
    @Html.DropDownList("FlavorId")
    
    @Html.Label("Select treat")
    @Html.DropDownList("TreatId")
    <input type="submit" value="Add new kind" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all kinds", "Index")</p>
