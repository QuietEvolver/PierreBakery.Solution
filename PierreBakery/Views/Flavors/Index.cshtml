@{
  Layout = "_Layout";
}

@using PierreBakery.Models;
@model IEnumerable<PierreBakery.Models.Flavor>

<h1>Flavors for @User.Identity.Name</h1>

@if (Model.Any())
{
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Title}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
}
else
{
  <h3>No flavors have been added yet!</h3>
}

<p>@Html.ActionLink("Add new flavor", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>
