@{
  Layout = "_Layout";
}

@using PierreBakery.Models;
@model IEnumerable<PierreBakery.Models.TreatFlavor>

<h1>Kinds in Shoppe for @User.Identity.Name</h1>

@if (!@Model.Any())
{
  <h3>No kind has yet been added.</h3>
}

@foreach (TreatFlavor treatFlavor in Model)
{
  <li>@Html.ActionLink($"{treatFlavor.TreatFlavorId}", "Details", "Home")</li>
}



<p>@Html.ActionLink("Home", "Index", "Home")</p>
